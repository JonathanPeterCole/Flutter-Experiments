{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter Release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "Flutter Debug: Prod",
            "request": "launch",
            "type": "dart",
        },
        {
            "name": "Flutter Debug: Local",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define",
                "API_URL=https://localhost:1000/"
            ]
        },
        {
            "name": "Flutter Debug: Gallery (Android)",
            "request": "launch",
            "type": "dart",
            "program": "gallery/main.dart",
            "args": [
                "--dart-define",
                "TARGET_PLATFORM=ANDROID"
            ]
        },
        {
            "name": "Flutter Debug: Gallery (iOS)",
            "request": "launch",
            "type": "dart",
            "program": "gallery/main.dart",
            "args": [
                "--dart-define",
                "TARGET_PLATFORM=IOS"
            ]
        }
    ]
}