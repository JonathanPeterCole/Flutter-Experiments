{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
        },
        {
            "name": "Profile: Prod",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
        },
        {
            "name": "Debug: Prod",
            "request": "launch",
            "type": "dart",
        },
        {
            "name": "Debug: Local",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define",
                "API_URL=https://localhost:1000/",
            ]
        },
        {
            "name": "Debug: Gallery",
            "request": "launch",
            "type": "dart",
            "program": "gallery/main.dart",
            "args": [
                "--dart-define",
                "PLATFORM_OVERRIDE=${input:platformOverride}"
            ]
        },
    ],
    "inputs": [
        {
            "id": "platformOverride",
            "description": "The override platform",
            "options": [
                "android",
                "ios"
            ],
            "type": "pickString"
        }
    ]
}